html
  head
    title= title
    base(href="https://ec2-13-49-12-40.eu-north-1.compute.amazonaws.com/" target="_blank")
    style.
      body {
        width: 600px;
        overflow: hidden;
        height: 800px;
      }

      .weather-widget .weather-widget-io {
        font-family: Tahoma,Arial,Verdana,Segoe,sans-serif;
        text-align: center;
      }

      .kindle-screen {
        border: 1px;
        border-color: black;
        margin: 10px;
        border-style: dotted;
      }

      .trains-widget {
        font-family: Tahoma,Arial,Verdana,Segoe,sans-serif;
        text-align: center;
        padding-top: 30px;
        font-size: 1.5em;
        height: 331.5px;
      }

      .trains-widget .title {
        font-weight: bold;
        font-size: 1.7em;
      }

      .trains-widget .trains-info {
        width: 100%;
        display: flex;
        flex-direction: row;
        padding: 0px 10px 10px 10px;
      }

      .trains-widget .departure {
        width: 45%;
      }

      .trains-widget .arrival {
        width: 45%;
      }

      .buffer {
        height: 20px;
      }

      .recycling-widget {
        font-family: Tahoma,Arial,Verdana,Segoe,sans-serif;
        text-align: center;
        padding-top: 30px;
        font-size: 1.5em;
        height: 331.5px;
      }
  body
    .wrapper
      .weather-widget(style='height: 210px;')
        a.weatherwidget-io(href="https://forecast7.com/en/51d46n0d01/lewisham/" data-label_1="LEWISHAM" data-label_2="WEATHER TODAY" data-days="5")
      .buffer 
      .trains-widget
        .trains-info 
          .departure 
            span.title St John's 
          .arrival 
            span.title Cannon St
        each train in trains
          .trains-info 
            .departure 
              .scheduled #{train.departureScheduled}
              .actual #{train.departureDue}
            .arrival
              .scheduled #{train.arrivalScheduled}
              .actual #{train.arrivalDue}
      .recycling-widget
        p Loading Recycling...
